<div class="container">
<div class="row d-flex justify-content-center">
  <div class="col-12 col-md-6 m-5 text-center border border-primary rounded py-5">
      <h1 class="text-primary mb-5">Previous Events</h1>
      <table class="w-100 text-center">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% unless @previous_events.nil? %>
          <% @previous_events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.description %></td>
              <td><%= link_to 'Details', event, class:"btn btn-success border-0 text-white" %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
      <h1 class="text-primary m-5">Upcoming Events</h1>
      <table  class="w-100 text-center">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
        <% unless @upcoming_events.nil? %>
          <% @upcoming_events.each do |event| %>
            <tr>
              <td><%= event.title %></td>
              <td><%= event.description %></td>
              <td><%= link_to 'Details', event, class:"btn btn-success border-0 text-white" %></td>
            </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New event', new_event_path , class:"btn btn-primary border-0 text-white"%>
   </div>
</div>
</div>

