<h1>Previous Events</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% unless @previous_events.nil? %>
    <% @previous_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Details', event %></td>
       </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<h1>Upcoming Events</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% unless @upcoming_events.nil? %>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Details', event %></td>
       </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

