<%= form_with(url: "/events", method: "post") do |form| %>

<div class="field">
  <%= form.label :title, class: "h3 font-weight-bold d-block" %>
  <%= form.text_field :title , class: "h5 font-weight-bold d-block border-rounded w-75 mx-auto mt-3 mb-5"%>
</div>

<div class="field">
  <%= form.label :description, class: "h3 font-weight-bold d-block" %>
  <%= form.text_field :description, class: "h5 font-weight-bold d-block border-rounded w-75 mx-auto mt-3 mb-5" %>
</div>

<div class="field">
  <%= form.label :date, class: "h3 font-weight-bold d-block" %>
  <%= form.date_field :date, class: "h5 font-weight-bold d-block border-rounded w-75 mx-auto mt-3 mb-5" %>
</div>

<div class="actions">
  <%= form.submit  class: "btn-primary py-3 px-5 border-0 rounded-pill"%>
</div>
<% end %>

