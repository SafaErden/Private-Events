<%= form_with(url: "/events", method: "post") do |form| %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_field :description %>
</div>

<div class="field">
  <%= form.label :date %>
  <%= form.date_field :date %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>

